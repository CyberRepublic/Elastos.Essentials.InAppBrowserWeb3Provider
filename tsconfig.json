{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2020",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "sourceMap": true,
    "lib": [ "es2015", "dom" ],
    "typeRoots": [
      "node_modules",
    ],
    "types": [
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*", "dist/*"
  ]
}